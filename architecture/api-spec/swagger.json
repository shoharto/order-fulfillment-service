swagger: "2.0"
info:
  description: "This is very simple api specification for order fuilfilment service."
  version: "1.0.0"
  title: "Order system: Fuilfilment Service"
  
host: "http://localhost:3000/api-docs/"
basePath: "/v2"
tags:
- name: "Fulfilment"
  description: "Everything about your order fuilfilment"
  externalDocs:
    description: "Find out more"
    url: "https://github.com/shoharto/order-fulfillment-service"
schemes:
- "https"
- "http"
paths:
  /deliver/orderId:
    post:
      tags:
      - "fullfilment"
      summary: "delivery product"
      description: ""
      operationId: "delivery"
      consumes:
      - "application/json"
      - "application/xml"
      produces:
      - "application/xml"
      - "application/json"
      parameters:
      - in: "body"
        name: "body"
        description: "Delivery object that needs to be added to the service"
        required: true
        schema:
          $ref: "#/definitions/Delivery"
      responses:
        "405":
          description: "Invalid input"
      security:
      - petstore_auth:
        - "write:pets"
        - "read:pets"



  /deliver-method:
    post:
      tags:
      - "fullfilment"
      summary: "Add a delivery method"
      description: ""
      operationId: "delivery"
      consumes:
      - "application/json"
      - "application/xml"
      produces:
      - "application/xml"
      - "application/json"
      parameters:
      - in: "body"
        name: "body"
        description: "Delivery method object that needs to be added"
        required: true
        schema:
          $ref: "#/definitions/DeliveryVendor"
      responses:
        "405":
          description: "Invalid input"
      security:
      - petstore_auth:
        - "write:pets"
        - "read:pets"



  /cancel-order:
    post:
      tags:
      - "fullfilment"
      summary: "cancel order after or before delivery"
      description: ""
      operationId: "delivery"
      consumes:
      - "application/json"
      - "application/xml"
      produces:
      - "application/xml"
      - "application/json"
      parameters:
      - in: "body"
        name: "body"
        description: "Cancel order object that needs to be added "
        required: true
        schema:
          $ref: "#/definitions/Cancellation"
      responses:
        "405":
          description: "Invalid input"
      security:
      - petstore_auth:
        - "write:pets"
        - "read:pets"

securityDefinitions:
  petstore_auth:
    type: "oauth2"
    authorizationUrl: "http://petstore.swagger.io/oauth/dialog"
    flow: "implicit"
    scopes:
      write:pets: "modify pets in your account"
      read:pets: "read your pets"
  api_key:
    type: "apiKey"
    name: "api_key"
    in: "header"
definitions:
  DeliveryVendor:
    type: "object"
    properties:
      id:
        type: "integer"
        format: "int64"
      petId:
        type: "integer"
        format: "int64"
      quantity:
        type: "integer"
        format: "int32"
      shipDate:
        type: "string"
        format: "date-time"
      status:
        type: "string"
        description: "DeliveryVendor Status"
        enum:
        - "placed"
        - "approved"
        - "delivered"
      complete:
        type: "boolean"
        default: false
    xml:
      name: "DeliveryVendor"
  Delivery:
    type: "object"
    properties:
      id:
        type: "integer"
        format: "int64"
      name:
        type: "string"
    xml:
      name: "Delivery"
  Invoice:
    type: "object"
    properties:
      id:
        type: "integer"
        format: "int64"
      username:
        type: "string"
      firstName:
        type: "string"
      lastName:
        type: "string"
      email:
        type: "string"
      password:
        type: "string"
      phone:
        type: "string"
      userStatus:
        type: "integer"
        format: "int32"
        description: "User Status"
    xml:
      name: "Invoice"
  Refund:
    type: "object"
    properties:
      id:
        type: "integer"
        format: "int64"
      name:
        type: "string"
    xml:
      name: "Refund"
  Cancellation:
    type: "object"
    required:
    - "name"
    - "photoUrls"
    properties:
      id:
        type: "integer"
        format: "int64"
      category:
        $ref: "#/definitions/Delivery"
      name:
        type: "string"
        example: "doggie"
      photoUrls:
        type: "array"
        xml:
          name: "photoUrl"
          wrapped: true
        items:
          type: "string"
      tags:
        type: "array"
        xml:
          name: "tag"
          wrapped: true
        items:
          $ref: "#/definitions/Cancellation"
      status:
        type: "string"
        description: " status "
        enum:
        - "available"
        - "pending"
        - "sold"
    xml:
      name: "Cancellation"
  ApiResponse:
    type: "object"
    properties:
      code:
        type: "integer"
        format: "int32"
      type:
        type: "string"
      message:
        type: "string"
